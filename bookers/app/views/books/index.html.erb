<h1>Books</h1>
<table>
  <tr>
   <th>title</th>
   <th>body</th>
   <th></th>
  </tr>

 <% @books.each do |book| %>
  <tr>
   <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
   <td><%=link_to "Show", books_path(book.id) %></td>
   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "date-confirm" => "Are you sure?" %></td>
  </tr>
 <% end %>
</table>

 <h3>New book</h3>
 <!-- form_with部分 -->
 <%= form_with model:@book, url:'books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>