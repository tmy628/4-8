<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url: "/books/#{@book.id}", local:true do |f| %>
<!--"/bookか？　→　methodにpatchを指定　→　"/books/#でOK -->
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
 <%= link_to "Show", show_book_path(@book) %>
 <%= link_to "Back", index_book_path(@book) %>
<% end %>